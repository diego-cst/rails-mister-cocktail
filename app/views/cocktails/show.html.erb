<div class="show-banner" style="background-image: linear-gradient(rgba(255,255,255,0), rgba(0,0,0,0.78)), url('<%= cl_image_path @cocktail.photo, height: 500, width: 500, crop: :fill %>'); background-size: cover">
  <div class="show-banner-content">
    <div class="show-banner-name">
      <%= @cocktail.name %>
    </div>
    <div class="show-card-reviews">
      <% @cocktail.average_score.to_i.times do %>
        <i class="fas fa-star"></i>
        <% end %>
      <% @cocktail.empty_stars.to_i.times do %>
        <i class="far fa-star"></i>
        <% end %>
      </div>
    <div class="show-review-number">
      <%= "(#{@cocktail.reviews.length} reviews)" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-2 col-md-offset-5">
      <ul class= "ingrediens-list">
        <% @cocktail.doses.each do |dose| %>
        <li class= "single-ingredient">
          <span class="ingredient-full">
            <%= dose.ingredient.name %>
            <%= dose.description %>
          </span>
          <%= link_to "", dose_path(dose), method: :delete, class: "far fa-times-circle" %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      <%= link_to "Add a review", new_cocktail_review_path(@cocktail)%>
    </div>
  </div>

  <div class="row reviews-row">
    <% @cocktail.reviews.each do |review| %>
      <div class="col-xs-12 col-md-3">
        <div class="review-card">
          <% review.stars.times do %>
          <i class="fas fa-star"></i>
          <% end %>
          <% (5 - review.stars.to_i).times do %>
          <i class="far fa-star"></i>
          <% end %>
          <p class="review-description"><%= review.description %></p>
        </div>
      </div>
    <% end %>
  </div>

</div>


