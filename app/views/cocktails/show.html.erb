
<h2><%= @cocktail.name %></h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to "| delete", dose_path(dose), method: :delete %>
      </li>
    <% end %>
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
</ul>

