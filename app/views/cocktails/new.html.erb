<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4 col-md-offset-4">
      <div class= "form">
          <%= simple_form_for @cocktail do |f| %>
            <%= f.input :name %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

