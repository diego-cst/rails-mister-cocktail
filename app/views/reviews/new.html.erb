<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4 col-md-offset-4">
      <h1>New review for <%= @cocktail.name %></h1>
      <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :stars %>
        <%= f.input :description %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
